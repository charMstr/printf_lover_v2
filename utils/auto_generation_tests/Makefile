###############################################################################
###############################################################################


############################ SETTINGS #########################################
###############################################################################
CFLAGS = -g -fsanitize=address -Wall -Wextra -Werror $(SPECIFIER)
CC = gcc
NAME = build_custom_functions
I_FLAGS = -I $(INCLUDE_PATH)
LDFLAGS =  #put here libaries ex: -lft -lm ...
###############################################################################
###############################################################################


############################ PATHS ############################################
###############################################################################
OBJ_PATH = ./objects/
SRC_PATH = ./sources/
INCLUDE_PATH = ./includes/
LIB_PATH = 
###############################################################################
###############################################################################


############################ COLORS ###########################################
###############################################################################
REMOVE_FG = \033[38;5;196m 
CREAT_FG = \033[38;5;46m
BLACK_FG = \033[38;5;0m
BLACK_BG = \033[48;5;0m
CLEAR_COLOR = \033[m

NAME_BG = \033[48;5;39m 
BONUS_BG = \033[48;5;213m
OBJECTS_BG = \033[48;5;11m
RANLIB_BG = \033[48;5;172m
###############################################################################
###############################################################################


########################### HEADER FILES ######################################
###############################################################################
H_FILES = get_next_line\
		PRF
INCLUDES = $(patsubst %, $(INCLUDE_PATH)%.h, $(H_FILES))
###############################################################################
###############################################################################


########################### SRC/OBJ & BONUS FILES #############################
###############################################################################
SRC_FILES = PRF_automated_building_assist_main\
			PRF_build_conversion_comb\
			PRF_build_flags_comb\
			PRF_build_function_files\
			PRF_build_function_files_assist\
			PRF_build_printf_lines\
			PRF_display\
			PRF_libft_func\
			PRF_managing_inputs1\
			PRF_managing_inputs_assist\
			PRF_merge_flags_conv\
			PRF_parsing_inputs\
			get_next_line\
			get_next_line_utils\
			main_automated_building\

SRC = $(patsubst %, $(SRC_PATH)%.c, $(SRC_FILES))
OBJ = $(patsubst %, $(OBJ_PATH)%.o, $(basename $(notdir $(SRC))))
###############################################################################
###############################################################################


all: $(INCLUDES) $(NAME)

.PHONY:clean fclean re all bonus

$(OBJ_PATH):
	@mkdir -p $(OBJ_PATH)

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) $(I_FLAGS) -o $@

$(OBJ): $(OBJ_PATH)%.o: $(SRC_PATH)%.c | $(OBJ_PATH)
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@rm -rf $(OBJ_PATH)

fclean: clean
	@rm -rf user_output
	@rm -rf $(NAME)

echo:
	@echo $(SRC_FILES)

re: fclean all
