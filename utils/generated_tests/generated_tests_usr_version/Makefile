############################ INCLUDE OTHER MAKEFILE ###########################
###############################################################################
DEP=./specifiers_and_srcs.mk
-include $(DEP) 
###############################################################################
###############################################################################


############################ SETTINGS #########################################
###############################################################################
ifndef $(DEBUG_FLAG)
	DEBUG_FLAG=
endif
CFLAGS = $(DEBUG_FLAG) -Wall -Wextra -Werror $(SPECIFIER)
CC = gcc
NAME = printf_breaker_usr
I_FLAGS = -I $(INCLUDE_PATH)
LDFLAGS =  #-L $(LIB_PATH) -lprintf
###############################################################################
###############################################################################


############################ PATHS ############################################
###############################################################################
OBJ_PATH = ./objects/
SRC_PATH = ./sources/
INCLUDE_PATH = ./includes/
LIB_PATH = #../../copy_in_here_ft_printf_files/
###############################################################################
###############################################################################


########################### HEADER FILES ######################################
###############################################################################
H_FILES = printf_lover_test_func\
		  #ft_printf\

INCLUDES = $(patsubst %, $(INCLUDE_PATH)%.h, $(H_FILES))
###############################################################################
###############################################################################


########################### SRC/OBJ & BONUS FILES #############################
###############################################################################
SRC = $(patsubst %, $(SRC_PATH)%.c, $(SRC_FILES))
OBJ = $(patsubst %, $(OBJ_PATH)%.o, $(basename $(notdir $(SRC))))
###############################################################################
###############################################################################


all: $(INCLUDES) $(NAME)

.PHONY: clean fclean re all bonus

$(OBJ_PATH):
	@mkdir -p $(OBJ_PATH)

$(NAME): $(OBJ) $(DEP)
	@$(CC) $(CFLAGS) $(OBJ) $(I_FLAGS) -o $@ $(SRC_PATH)libftprintf.a

$(OBJ): $(OBJ_PATH)%.o: $(SRC_PATH)%.c | $(OBJ_PATH)
	@$(CC) $(CFLAGS) -c $< -o $@ $(LDFLAGS)

clean:
	@rm -rf $(OBJ_PATH)

fclean: clean
	@rm -rf user_output
	@rm -rf $(NAME)

re: fclean all
