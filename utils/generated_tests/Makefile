############################ INCLUDE OTHER MAKEFILE ###########################
###############################################################################
DEP=./specifiers_and_srcs.mk
-include $(DEP) 
override SPECIFIER ?= -D NONE
# if the variable has not been defined --> define for a fall back option 
###############################################################################
###############################################################################


############################ SETTINGS #########################################
###############################################################################
ifndef $(DEBUG_FLAG)
	DEBUG_FLAG=
endif
CFLAGS = $(DEBUG_FLAG) -Wall -Wextra -Werror $(SPECIFIER)
CC = gcc
NAME = printf_breaker
I_FLAGS = -I $(INCLUDE_PATH)
LDFLAGS =  #put here libaries ex: -lft -lm ...
###############################################################################
###############################################################################


############################ PATHS ############################################
###############################################################################
OBJ_PATH = ./objects/
SRC_PATH = ./sources/
INCLUDE_PATH = ./includes/
LIB_PATH = 
###############################################################################
###############################################################################


############################ COLORS ###########################################
###############################################################################
REMOVE_FG = \033[38;5;196m 
CREAT_FG = \033[38;5;46m
BLACK_FG = \033[38;5;0m
BLACK_BG = \033[48;5;0m
CLEAR_COLOR = \033[m

NAME_BG = \033[48;5;39m 
BONUS_BG = \033[48;5;213m
OBJECTS_BG = \033[48;5;11m
RANLIB_BG = \033[48;5;172m
###############################################################################
###############################################################################


########################### HEADER FILES ######################################
###############################################################################
H_FILES = printf_lover_test_func\

INCLUDES = $(patsubst %, $(INCLUDE_PATH)%.h, $(H_FILES))
###############################################################################
###############################################################################


########################### SRC/OBJ & BONUS FILES #############################
###############################################################################
SRC = $(patsubst %, $(SRC_PATH)%.c, $(SRC_FILES))
OBJ = $(patsubst %, $(OBJ_PATH)%.o, $(basename $(notdir $(SRC))))
###############################################################################
###############################################################################


all: $(INCLUDES) $(NAME)

.PHONY: clean fclean re all bonus

$(OBJ_PATH):
	@mkdir -p $(OBJ_PATH)

$(NAME): $(OBJ) $(DEP)
	@$(CC) $(CFLAGS) $(OBJ) $(I_FLAGS) -o $@

$(OBJ): $(OBJ_PATH)%.o: $(SRC_PATH)%.c | $(OBJ_PATH)
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	@rm -rf $(OBJ_PATH)

fclean: clean
	@rm -rf user_output
	@rm -rf $(NAME)

re: fclean all
